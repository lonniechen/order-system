{
    "verbose": true,
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
        "<rootDir>/main.ts",
        ".module.ts",
        ".e2e.ts"
    ],
    "testEnvironment": "node"
}